<div class="article-container">
    <h2 class="title"><%= post.title %></h2>
    <span class="info"><%- date(post.date, 'MMM D, YYYY') %></span>
    <div class="toc">
        <% if (toc(post.content)) { %>
            <%- toc(post.content) %>
        <% } %>
    </div>
    <div class="content"><%- post.content %></div>
    <hr>
    <div class="tags"></div>
    <div class="paging">
        <% if (post.prev) { %>
            <a id="prev" href="<%- url_for(post.prev.path) %>">⟵ <%= __('prev_page').toUpperCase() %></a>
        <% } %>
        <% if (post.next) { %>
            <a id="next" href="<%- url_for(post.next.path) %>"><%= __('next_page').toUpperCase() %> ⟶</a>
        <% } %>
    </div>
</div>